require 'rubygems'
require 'echoe'

Echoe.new("mm-attach-it") do |p|
  p.author = "Adilson Chacon"
  p.email = "adilsonchacon@gmail.com"
  p.summary = "MongoMapper Plugin File Attacher."
  p.runtime_dependencies = ["wand", "mongo_mapper", "rmagick", "mime-types"]
  p.development_dependencies = ["wand", "mongo_mapper", "rmagick", "mime-types"]
  p.description = "Attach files (images, videos, pdfs, txts, zips and etc) to a MongoMapper record. You can choose if you to store it on file system or GridFS."
  p.url = "https://github.com/adilsonchacon/mm-attach-it"
  p.version = "0.1.0"
end
